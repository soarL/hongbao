.wrap {
  padding: 15px;
  font-size: 14px;
}

.label {
  margin-bottom: 5px;
  font-weight: bold;
}

.input {
  display: block;
  height: 17px;
  padding: 3px 6px;
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
  margin-bottom: 15px;
}

.tip,
.helpc {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.button {
  color: #fff;
  background-color: #d9534f;
  border-color: #d43f3a;
  display: block;
  padding: 7px 12px;
  font-size: 14px;
  line-height: 1.5;
  text-align: center;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 4px;
  margin: 15px auto;
}

.disabled {
  opacity: 0.8;
}

.help {
  padding: 10px;
  margin: 0 0 10px;
  font-size: 13px;
  color: #333;
  word-break: break-all;
  word-wrap: break-word;
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-radius: 4px;
  overflow: hidden;
}

.helpt {
  font-weight: bold;
}

.website {
  text-align: center;
  white-space: nowrap;
}
